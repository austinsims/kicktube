<h1>{{title}}</h1>

<p>
  Event data from
  <a href="http://www.songkick.com">
    <img src="img/sk_logo.png" alt="Songkick.com"></img>
  </a>
</p>

<table class="event-listings">
  <thead>
    <tr>
      <th>Date</th>
      <th>Artists</th>
      <th>Venue</th>
      <th>Link</th>
      <th>Video</th>
    </tr>
  </thead>
  <tbody>
    {{#each events}}
      <tr>
        <td>{{this.start.datetime}}</td>
        <td>{{this.displayName}}</td>
        <td>{{this.venue.displayName}}</td>
        <td><a href="{{this.uri}}">GO!</a></td>
        <td>
          {{#if this.videoUrl}}
            <iframe src="{{this.videoUrl}}"></iframe>
          {{/if}}
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>
